package com.class14;

public class T2 {
  public static void main(String[] args) {
	
 //  2.Write a java program to find the second largest number in the array? Maximum and minimum number in the array?	  
	  
	int[] arr= {32,21,10,43,15};
	int largest=arr[0];
	int min=arr[0];
	int secondLar=arr[0];
	
      
      for (int i = 0; i < arr.length; i++) {

          if (arr[i] > largest) {
              secondLar = largest;
              largest = arr[i];

          } else if (arr[i] > secondLar) {
              secondLar = arr[i];
          }
          if(arr[i]<min ) {
              min = arr[i];
          }
      }
	 System.out.println("Maximum number is "+largest); 
	 System.out.println("Minimum number is "+min); 
	 System.out.println("The second largest number is :"+secondLar);
}
}
