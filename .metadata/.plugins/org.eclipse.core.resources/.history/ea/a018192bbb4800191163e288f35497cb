package com.class9;

public class Task7Again {
   public static void main(String[] args) {
	
	   // *	     rows=6+5; cplumns=6;
	   //  *
	   //   *
	   //    *
	   //	  *  
	   //      *
	   //     *
	   //    *
	   //   *	   
	   //  *	   
	   // * 
	   
	  for (int i=6; i>=1; i++) {
		  
		  for (int y=1; y<=i; y++) {
			  System.out.print("*");
		  }
		  System.out.println();
	  }
	  for (int i=5; i>=1; i++) {
		  
		  for (int y=5; y>=i; y--) {
			  System.out.print("*");
		  }
		  System.out.println();
	  }
}
}
