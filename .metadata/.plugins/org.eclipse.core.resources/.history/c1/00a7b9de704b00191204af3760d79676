package com.JavaReview5;

public class Task3 {
   public static void main(String[] args) {
	
	// ....1   
	// ...2   
	// ..3   
	// .4   
	// 5   
	      
	   for (int i=1; i<=5; i++)  {
		   for (int y=5; y>=1; y--)  {
			   if (y<=i) {
			   System.out.print(i);
		   }else {
		       System.out.print(".");
		   }
		   }
		System.out.println();	   
	   }
	 // second way
	   
	   for(int i =1; i<=5; i++) {
           for(int k = 1; k<=(5-i); k++) {
               System.out.print(".");
           }
           
           System.out.println(i);
           
       }
	   
}
}
