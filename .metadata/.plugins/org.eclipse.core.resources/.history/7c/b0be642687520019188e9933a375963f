package com.class14;

public class ReplaceCharacter {
  public static void main(String[] args) {
	
	// Create a String that will hold a sentence. Write a program to get a new String without any spaces.  
	
	  // .replace() --> replacing a char character with a new one 
	String str="I will be awsome!" ; 
	System.out.println(str.replace("l", "s"));  
	
	// .replaceAll() -->> replace all string with a new one
	String str1="Hey, where are you going now?";
	System.out.println(str1.replace("Hey, ", ""));
	
	String str2="Hi to java-iterview-question";
	System.out.println("BEFORE: "+str2);
	
	System.out.println("AFTER: "+str2.replace("Hi", "Welcome"));
	
}
}