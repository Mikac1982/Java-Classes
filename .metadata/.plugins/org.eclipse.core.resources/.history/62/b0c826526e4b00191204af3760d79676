package com.JavaReview5;

public class Task2 {
    public static void main(String[] args) {
		
    // ....1   rows=5 columns=5
    // ...22
    // ..333
    // .4444	
    // 55555	
    	
    for (int i=1; i<=5; i++)	{
    	for (int y=5; y>=1; y--) {
    		if (y>i) {
    			System.out.print(".");
    		}else {
    			System.out.print(i);
    		}
 
    	}
    	System.out.println();
    }
    
 //  for (int i=1; ) 
    
    
    	
	}
}
