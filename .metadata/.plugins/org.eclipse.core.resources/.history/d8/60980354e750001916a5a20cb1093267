package com.Java.Review6;

public class Task1 {
  public static void main(String[] args) {
	
	int[][]  arr= {
			{1,2,3},
			{4,5,6},
			{7,8,9}
	};
	
	int sum=0;
	
	for (int i=0; i<arr[1].length; i++) {
		System.out.println(arr[1][i]);     // sum of the second row
		
		sum+=arr[1][i];
	}
	System.out.println(sum);  
}
}
