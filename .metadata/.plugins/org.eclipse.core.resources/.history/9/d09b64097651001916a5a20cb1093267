package com.Java.Review6;

public class Again {
  public static void main(String[] args) {

		 // Write a program to print a length of each array  
		   
		 int[][] ar= {
				 {1,2,3},
				 {4,5,6,9},
				 {7,8}
		 };
	//	 int[][] ar = { { 1, 2, 3 }, { 4, 5, 6, 9 }, { 7, 8 } };
		 
	 for (int i=0; i<ar.length; i++) {
		 for (int y=0; y<ar[i].length; y++)  {
			 
		 }
		 System.out.println(ar[i].length);
	 }

	 System.out.println("---using For loop----");
    for (int i=0; i<ar.length; i++) {
	     System.out.println("The length of row "+i+" is "+ar[i].length);
}

		
}
}
