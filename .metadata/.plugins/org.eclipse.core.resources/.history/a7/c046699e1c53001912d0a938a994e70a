package com.class14;

public class T2 {
  public static void main(String[] args) {
	
 //  2.Write a java program to find the second largest number in the array? Maximum and minimum number in the array?	  
	  
	int[] arr= {1,2,10,4,5};
	int largest=arr[0];
	int min=arr[0];
	int secondLar=arr[0];
	
      
      for (int i = 0; i < arr.length; i++) {

          if (arr[i] > largest) {
              secondLar = largest;
              largest = arr[i];

          } else if (arr[i] > secondLar) {
              secondLar = arr[i];
          }
          if(min > arr[i] ) {
              min = arr[i];
          }
      }
	 System.out.println("The maximum number is "+largest); 
	 System.out.println("The minimum number is "+min); 
	 System.out.println(secondLar);
}
}
