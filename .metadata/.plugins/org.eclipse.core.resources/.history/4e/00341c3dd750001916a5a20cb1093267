package com.Practice;

public class JavvaArray7 {
   public static void main(String[] args) {
	
	// Write a Java program to remove a specific element from an array   
	   
	   int num[]= {1,2,3,4,6,8};
       int a=3;                              //find that element
       int b[]=new int[num.length-1];        // create a new array with size -1 
       
       for(int i=0,y=0; i<num.length; ++i) {
          
    	   if(num[i]!=a) {
               b[y]=num[i];
               y=y+1;
               }
               
           }  
	   
	   
	   
}
}
