package com.class14;

public class StringSplit {
   public static void main(String[] args) {
	
	   // split(); cut your string(when we cut string we are getting arrays)
	   
	 String str="Welcome Syntax. Students Batch 4";
	 
	 String[] array= str.split(".");
	 System.out.println("The length of the array is: "+array.length);  // 3 (we get 3 strings now) 
	 
	 for (String substring:array) {
		 System.out.println(substring);
	 }
	 System.out.println("--------------");
	 
	 for (int i=0; i<array.length; i++) {
		 System.out.println(array[i]);
	 }
}
}
