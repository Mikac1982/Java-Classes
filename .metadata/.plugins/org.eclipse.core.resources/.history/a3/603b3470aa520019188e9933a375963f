package com.class14;

public class Practice {
   public static void main(String[] args) {
	
	String s="hello my friends! how you been" ;
	
	// replace one char by another
	System.out.println("BEFORE: "+s);
	System.out.println("AFTER : "+s.replace("h","H"));  
	
	System.out.println();
	// replace char sequence with another
	System.out.println("BEFORE: "+s);
	System.out.println("AFTER : "+s.replace("how you been?", ""));
	
	System.out.println();
	// replace hole string with a new one
	System.out.println("BEFORE: "+s);
	System.out.println("AFTER : "+s.replaceAll(s, "Wellcome home"));
}
}
