package com.class14;

public class T3 {
public static void main(String[] args) {
	
	// 3. Find out how many alpha characters present in a string?
	
	String str="12aaa34**bbbb";
	
	String replaced=str.replaceAll("[^a-zA-Z]", "");
	System.out.println("Number of alpha characters is "+replaced.length());
	
	   
    String day="It is a 1123wonderful $%?^day";
    
    String day1=day.replaceAll("[^a-zA-Z]","");
    System.out.println("Number of alpha characters is "+day1.length());
    
    String day2=day.replaceAll("[0-9]", "_");
    System.out.println(day2);
    
    
}
}
