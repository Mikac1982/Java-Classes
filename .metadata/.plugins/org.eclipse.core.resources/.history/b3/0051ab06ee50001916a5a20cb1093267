package com.Java.Review6;

public class Task5 {
   public static void main(String[] args) {
	
//  Write a program to find the average of row 2.
  //     2 6 9 3 7
  //     1 7 9 4 8
  //     0 4 6 2 5
  //     0 1 2 3
   int[][] rating = { { 2, 6, 9, 3, 7 }, { 1, 7, 9, 4, 8 }, { 0, 4, 6, 2, 5 }, { 0, 1, 2, 3 } };  
	   
	double sum=0; 
	double average=0;
	
	for (int i=0; i<rating.length; i++) {
	
			sum=sum+rating[2][i];
	}
	average=sum/rating[2].length;
	System.out.println("The average of the second row is "+average);
	
}
}
