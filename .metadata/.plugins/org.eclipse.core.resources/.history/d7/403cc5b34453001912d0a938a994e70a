package com.class14;

public class T2 {
  public static void main(String[] args) {
	
 //  2.Write a java program to find the second largest number in the array? Maximum and minimum number in the array?	  
	  
	int[] array= {32,4,21,10,43,15};
	int largest=0;
	int min=0;;
	int secondLar=0;
	
    for (int i=0; i<array.length; i++) {
    	
    	if (array[i]>largest) {
    		secondLar=largest;
    		largest=array[i];
    		
    	}else if (array[i]>secondLar) {
    		secondLar=array[i];
    		
    	}else if (array[i]<min) {
    		min=array[i];
    	}
    }
	System.out.println("The second largest number: "+secondLar);
	System.out.println("Maximum number: "+largest);
	System.out.println("Minimum number: "+min);
	
}
}
